<LandingScreen>:
    MDBoxLayout:
        padding: '15dp'
        spacing: '10dp'

        MDCard:
            size_hint: None,1
            width: '70dp'
            orientation: 'vertical'
            elevation: 0
            radius: 15
            MDBoxLayout:
            MDBoxLayout:
                orientation: 'vertical'
                padding: '5dp'
                spacing: '10dp'
                pos_hint: {'center_x': 0.5}
                id: menu_wrapper
                MDIconButton:
                    icon: 'account-circle-outline'
                    pos_hint: menu_wrapper.pos_hint
                    on_release:
                        root.controller.change_screens('AccountProfileScreen')
                MDIconButton:
                    icon: 'database-edit-outline'
                    pos_hint: menu_wrapper.pos_hint
                    on_release:
                        root.controller.change_screens('DatabaseEditScreen')
                MDIconButton:
                    icon: 'cog-outline'
                    pos_hint: menu_wrapper.pos_hint
                    on_release:
                        root.controller.change_screens('SettingsScreen')
                MDIconButton:
                    icon: 'arrow-left'
                    pos_hint: menu_wrapper.pos_hint
                    on_release:
                        app.change_screens('MainScreen')
            MDBoxLayout:
        MDBoxLayout:
            radius: 10
            MDScreenManager:
                id: landing_screen_manager


