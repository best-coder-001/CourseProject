<BaseInputBox>:
    size_hint_y: None
    height: '240dp'
    ScrollView:
        size: self.size
        MDBoxLayout:
            id: field_wrapper
            orientation: 'vertical'
            size_hint: 1,None
            height: self.minimum_height
            spacing: '10dp'
            padding: '10dp'

<BaseUpdateInputBox>:
    size_hint_y: None
    height: '240dp'
    ScrollView:
        size: self.size
        MDBoxLayout:
            id: field_wrapper
            orientation: 'vertical'
            adaptive_height: True
            spacing: '10dp'
            padding: '10dp'







